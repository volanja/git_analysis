#! /usr/bin/env ruby
# coding: utf-8

require 'git_analysis'
require 'rubygems'
require 'thor'

class Cli < Thor

  desc "count [-d]", "count(email domain only)"
  option :"domain", :type => :boolean, :aliases => '-d', :desc => "count e-mail domain. export json"
  def count
    if options[:domain]
      GitAnalysis.count_domain
    else
      puts "[MUST] Use -d on ver0.0.1"
    end
  end

  desc "diff", "p add,p del"
  def diff
    GitAnalysis.count_diff
  end
  #desc "export", "export"
  #def export
  #  GitAnalysis.export
  #end

  desc "version", "show version"
  def version
    puts GitAnalysis::VERSION
  end

end

Cli.start

exit 0
